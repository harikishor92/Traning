package DataBaseConn;

public class SQLServerDB {

	public static void main(String[] args) {
		//create variable to connection String
		String connectionUrl = "jdbc:sqlserver://localhost:1433;databaseName=harikishor;"+
			"integratedSecurity=true;";
				
				//Declear jdbc object
				//Connection con = null;
				//Statement smt = null;
				//ResultSet rs=null;
		try
		{
			//Loading the required JDBC Driver class
			Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
			//Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
			System.out.println("Loading the required JDBC Driver class");
			//Creating a connection to the database
			Connection con = DriverManager.getConnection(connectionUrl);
			System.out.println("Creating a connection to the database");
			//Executing SQL query 
			Statement smt = con.createStatement();
			System.out.println("Executing SQL query");
			//Fatching result
			ResultSet rs = smt.executeQuery("select * from bank_src");
			System.out.println("Fatching result");
			while(rs.next())
			{
				System.out.println(rs.getString("Bank_id"));
			}
				
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
		finally
		{
			//con.close();
		}

	}

}
