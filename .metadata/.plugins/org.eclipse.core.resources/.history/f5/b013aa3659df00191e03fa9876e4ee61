
public class Mcnt {

	public static void main(String[] args) {
		String s = "aabaaaaaavaa";
		int cnt = 0;
		int mcnt = 0;
		for(int i=0; i<s.length(); i++)
		{
			if(s.charAt(i) == 'a')
			{
				cnt++;
			}
			if(cnt>mcnt)
			{
				mcnt = cnt;
			}
			else if(s.charAt(i) != 'a')
			{
				cnt = 0;
			}
		}
		System.out.println(mcnt);
		// TODO Auto-generated method stub

	}

}
